<Window x:Class="DivergenceMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DivergenceMeter"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        AllowsTransparency="True"  
        Background="Transparent" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ShowInTaskbar="False">
    <!--
    AllowsTransparency="True"  Background="Transparent"  配合使窗体能够透明 
    -->
    <!-- 
     ShowInTaskbar 属性 隐藏任务栏窗口
    -->
    <Grid Margin="0" ContextMenu="{StaticResource Menu}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
         </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0"  Name="A" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="1" Name="B" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="2" Name="C" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="3" Name="D" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="4" Name="E" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="5" Name="F" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="6" Name="G" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        <Image Grid.Column="7"  Name="H" Source="images/10.png" Stretch="Fill" Opacity="0.5"></Image>
        
    </Grid>

</Window>
