<Application x:Class="DivergenceMeter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DivergenceMeter"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml" ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ContextMenu x:Key="Menu">
            <MenuItem Header="全部设置" />
            <Separator />
            <MenuItem Header="退出" Click="ClickToExit" />
        </ContextMenu>
        <!-- 系统托盘 使用第三方包 -->
        <tb:TaskbarIcon x:Key="Taskbar"
                        IconSource="images/favicon.ico"
                        ToolTipText="DivergenceMeter"
                        ContextMenu="{StaticResource Menu}">
        </tb:TaskbarIcon>
        
    </Application.Resources>
</Application>
