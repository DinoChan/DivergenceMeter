<Application x:Class="DivergenceMeter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DivergenceMeter"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml" ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ContextMenu x:Key="Menu">
            <MenuItem Header = "打开设置"/>
            <MenuItem Header = "点击穿透"/>
            <MenuItem Header = "边缘吸附"/>
            <MenuItem Header = "允许拖动"/>
            <MenuItem Header = "桌面固定"/>
            <MenuItem Header = "退出应用" Click="ClickToExit"/>
        </ContextMenu>
        <!-- 系统托盘 使用第三方包 -->
        <tb:TaskbarIcon x:Key="Taskbar"
                        IconSource="images/favicon.ico"
                        ToolTipText="DivergenceMeter"
                        ContextMenu="{StaticResource Menu}">
        </tb:TaskbarIcon>
        
    </Application.Resources>
</Application>
